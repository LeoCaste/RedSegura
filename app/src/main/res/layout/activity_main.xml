<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <!-- Bot贸n flotante principal -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_dialog_dialer"
        android:contentDescription="Bot贸n principal de acciones" />

    <!-- Bot贸n flotante para abrir el mapa -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        android:src="@android:drawable/ic_menu_mapmode"
        android:contentDescription="Abrir mapa de alertas" />

    <!-- Bot贸n flotante para abrir el asistente IA -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_ia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        android:src="@android:drawable/ic_menu_info_details"
        android:contentDescription="Abrir asistente IA" />

</FrameLayout>
